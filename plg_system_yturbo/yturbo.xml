<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_YTURBO</name>
	<author>Septdir Workshop</author>
	<creationDate>January 2020</creationDate>
	<copyright>Copyright (c) 2018 - 2020 Septdir Workshop. All rights reserved.</copyright>
	<license>https://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>development@septdir.com</authorEmail>
	<authorUrl>https://www.septdir.com/</authorUrl>
	<version>1.5.1-dev</version>
	<description>PLG_SYSTEM_YTURBO_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_yturbo.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_yturbo.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_yturbo.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_yturbo.sys.ini</language>
	</languages>
	<files>
		<folder>fields</folder>
		<filename plugin="yturbo">yturbo.php</filename>
		<filename>helper.php</filename>
	</files>
	<config>
		<fields name="params" addfieldpath="/plugins/system/yturbo/fields">
			<fieldset name="basic">
				<field name="api_token" type="text"
					   label="PLG_SYSTEM_YTURBO_PARAMS_API_TOKEN"
					   class="input-xxlarge"/>
				<field name="limit" type="number"
					   label="PLG_SYSTEM_YTURBO_PARAMS_LIMIT"
					   default="1000"/>
				<field name="mapping" type="subform"
					   label="PLG_SYSTEM_YTURBO_PARAMS_MAPPING"
					   multiple="true"
					   min="1"
					   layout="joomla.form.field.subform.repeatable-table">
					<form>
						<field name="category" type="category"
							   label="JCATEGORY"
							   extension="com_content">
							<option value="1">JALL</option>
						</field>
						<field name="layout" type="layout"
							   label="PLG_SYSTEM_YTURBO_PARAMS_LAYOUT"
							   default="default"/>
					</form>
				</field>
				<field name="feeds" type="feeds"
					   label="PLG_SYSTEM_YTURBO_PARAMS_FEEDS"/>
			</fieldset>
		</fields>
	</config>
	<layouts destination="plugins/system/yturbo" folder="layouts"/>
</extension>